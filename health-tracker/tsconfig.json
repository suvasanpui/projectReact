{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@kilohealth/rn-fitness-tracker": ["./src/index"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "docs"],
  "files": ["src/modules.d.ts"]
}
